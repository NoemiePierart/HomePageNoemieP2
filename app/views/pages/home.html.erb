              <div class="card-techno">
                <img src="/assets/stripe.jpg" alt="stripe logo" class="techno-logos">
                <div class="techno-names">Stripe</div>
              </div>
            </div>

            <div class="cards">
              <div class="card-techno">
                <img src="/assets/git.png" alt="Git logo" class="techno-logos">
                <div class="techno-names">Git</div>
              </div>

              <div class="card-techno">
                <img src="/assets/github.png" alt="github logo" class="techno-logos">
                <div class="techno-names">Github</div>
              </div>

              <div class="card-techno">
                <img src="/assets/heroku.png" alt="Heroku logo" class="techno-logos">
                <div class="techno-names">Heroku</div>
              </div>

              <div class="card-techno">
                <img src="/assets/terminal.png" alt="Terminal logo" class="techno-logos">
                <div class="techno-names">Terminal</div>
